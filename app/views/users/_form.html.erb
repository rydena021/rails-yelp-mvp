<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :age %>
    <%= f.input :bio %>
    <%= f.input :state, collection: %w(Alabama California Minnesota Texas Utah Wisconsin) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
