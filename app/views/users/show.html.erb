<h2>USER:</h2>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Age:</strong>
  <%= @user.age %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @user.bio %>
</p>

<p>
  <strong>State:</strong>
  <%= @user.state %>
</p>

<%= link_to 'Back', users_path %> |
<%= link_to "Edit", edit_user_path(@user) %>
<hr>


<h2>POSTS:</h2>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Rating </th>
    </tr>
  </thead>

  <tbody>
    <% @user.posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= post.rating %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<h2>New Post</h2>

<%= link_to 'New post', new_user_post_path(@user), class: "btn btn-primary"%>



